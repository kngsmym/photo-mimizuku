/* archive ( include overlay ) */

._p-archive__title{
	{mymincho}
	font-weight:normal;
	font-size:1rem;
	text-align:center;
	margin:1em;
	@media (max-width: sm) {
		font-size:0.8rem;
	}
}

._p-entries{
	margin:auto;
	padding:10px;
	&__item{
		padding:10px;
		margin:0;
	}
}

._p-entry{
	&-summary{
		position:relative;
		overflow:hidden;
		&__body{
			position:absolute;
			top:0;
			left:0;
			padding:5px;
			display:flex;
			width:100%;
			height:100%;
			justify-content: center;
			align-items: center;
		}
		&__title{
			{mymincho}
			font-size:.8rem;
			color:#FFF;
			text-shadow:0 0 2px #000;
			line-height:1em;
			letter-spacing:-1px;
		}
		a{
			&:hover{
				img{
					opacity:.5;
				}
			}
		}
	}
}
._p-rest__container{
	._p-entries{
		opacity:0;
	}
}
