@import '../../../mimizuku/src/stylus/style4child';

sm = 640px;

mincho = @block {
	font-family:"tbnpmincho-std","ヒラギノ明朝 ProN W3", "Hiragino Mincho ProN", "HG明朝E", "ＭＳ Ｐ明朝", "ＭＳ 明朝", serif
	font-weight:bold
}

/* common */

._l-header{
	._p-site-branding{
		padding:3em 10px;
		text-align:right;
		font-family: "mrs-eaves",serif;
	}
}

/* single */

._p-entry{
	&__header{
		text-align:center;
	}
	&__keyvisual{
		display:inline-block;
		position:relative;
		img{
			max-width:100%;
			height:auto;
		}
	}
	&__title{
		position:absolute;
		left:70%;
		top:10%
		@media (max-width: sm) {
				top:20%
		}
		{mincho}
		font-size:5vw;
		@media (max-width: sm) {
			font-size:7vw;
		}
		color:#FFF;
		-ms-writing-mode: tb-rl; /* for MS IE8+ */
	    -webkit-writing-mode: vertical-rl;
	    writing-mode: vertical-rl;
		animation-name: anime1;
		animation-duration: 8s;
		animation-timing-function: ease;
		animation-iteration-count: 1;
		animation-fill-mode:forwards;
	}
	&__caption{
		text-align:left;
		position:absolute;
		left:70% + 7vw;
		top:10%
		@media (max-width: sm) {
				top:20%
		}
		color:#FFF;
		-ms-writing-mode: tb-rl; /* for MS IE8+ */
	    -webkit-writing-mode: vertical-rl;
	    writing-mode: vertical-rl;
		animation-name: anime1;
		animation-duration: 8s;
		animation-timing-function: ease;
		animation-iteration-count: 1;
		animation-fill-mode:forwards;
	}
	&__location{
		{mincho}
		font-size:2vw;
		@media (max-width: sm) {
			font-size:4vw;
		}
	}
	&__shooting_date{
		font-size:1vw;
		font-family: "mrs-eaves",serif;
		font-style: normal;
		font-weight: 300;
	}
	&-meta__shooting{
		padding:0.5rem 0;
		font-size:0.5rem;
		text-align:right;
	}
}

@keyframes anime1 {
	0% {opacity:0;
		text-shadow:0 0 3px #000;
	}
	100% {opacity:1;
		text-shadow:0 0 3px #000;
	}
}


/* archive */

._p-entries{
	margin:auto;
	padding:10px;
	&__item{
		padding:10px;
		margin:0;
	}
}

._p-entry{
	&-summary{
		position:relative;
		&__body{
			position:absolute;
			top:0;
			left:0;
			padding:5px;
			display:flex;
			width:100%;
			height:100%;
			justify-content: center;
			align-items: center;
		}
		&__title{
			{mincho}
			font-size:.5rem;
			color:#FFF;
			text-shadow:0 0 2px #000;
		}
		a{
			img{
				transition:1s;
			}
			&:hover{
				img{
					opacity:.5;
				}
			}
		}
	}
}

