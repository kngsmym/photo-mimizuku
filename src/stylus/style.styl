@import url(https://fonts.googleapis.com/css?family=Sorts\+Mill\+Goudy);

@import '../../../mimizuku/src/stylus/style4child';

sm = 640px;
lg = 1400px

mymincho = @block {
	font-family:"ヒラギノ明朝 ProN W3", "Hiragino Mincho ProN", "HG明朝E", "ＭＳ Ｐ明朝", "ＭＳ 明朝", serif
	font-weight:bold
}
myserif = @block {
		font-family: 'Sorts Mill Goudy',serif
}

/* common */

._l-header{
	background-color:#000;
	font-weight:bold;
	._p-site-branding{
		padding:.4em 1em .2em;
		text-align:center;
		{myserif}
		font-size:1rem;
		a{
			color:#7b867d;
		}
	}
}

a{
	color:#333;
	text-decoration:none;
}


/* single */

._p-entry{
	&__header{
		text-align:center;
	}
	&__keyvisual{
		display:inline-block;
		position:relative;
		img{
			max-width:100%;
			width:100%;
			height:auto;
		}
	}
	&__title{
		position:absolute;
		left:70%;
		top:10%
		@media (max-width: sm) {
				top:20%
		}
		{mymincho}
		font-size:5vw;
		color:#FFF;
		-ms-writing-mode: tb-rl; /* for MS IE8+ */
	    -webkit-writing-mode: vertical-rl;
	    writing-mode: vertical-rl;
		animation-name: anime1;
		animation-duration: 8s;
		animation-timing-function: ease;
		animation-iteration-count: 1;
		animation-fill-mode:forwards;
	}
	&__caption{
		text-align:left;
		position:absolute;
		left:70% + 7vw;
		top:10%
		@media (min-width: lg) {
			left:70% + 8vw;
		}
		@media (max-width: sm) {
				top:20%
		}
		color:#FFF;
		-ms-writing-mode: tb-rl; /* for MS IE8+ */
	    -webkit-writing-mode: vertical-rl;
	    writing-mode: vertical-rl;
		animation-name: anime1;
		animation-duration: 8s;
		animation-timing-function: ease;
		animation-iteration-count: 1;
		animation-fill-mode:forwards;
	}
	&__location{
		{mymincho}
		font-size:2vw;
		@media (min-width: lg) {
			font-size:1.5vw;
		}
		@media (max-width: sm) {
			font-size:3vw;
		}
	}
	&__shooting_date{
		font-size:2vw;
		@media (max-width: sm) {
			font-size:4vw;
		}
		{myserif}
		font-style: normal;
		font-weight: 300;
		line-height:1em;
	}
	&-meta__shooting{
		padding:0.5rem 0;
		font-size:0.5rem;
		text-align:right;
	}
	&-meta{
		font-size:.8rem;
		color:#000;
		&__item{
			a{
				color:#000;
			}
		}
	}
}

/* photo nav */

#pjax-container{
	position:relative;
}

._p-photo-nav{
	@media (min-width: sm) {
		position:absolute;
		top:.7rem;
		left:50%;
		margin-left:-6rem;
		z-index:10;
		background-color:rgba(255,255,255,.1);
		border-radius:3rem;
		a{
			color:rgba(0,0,0,.2);
			transition:.5s;
		}
		&:hover{
			background-color:rgba(255,255,255,.3);
			a{
				color:#333;
				&:hover{
					color:#900;
				}
			}
		}
	}
	@media (max-width: $sm) {
		a{
			color:#333;
		}
	}
	&__list{
		list-style-type:none;
		margin:0;
		padding:0;
		text-align:center;
	}
	&__item{
		display:inline-block;
		a{
			display:block;
			padding:.7rem 1rem;
			font-size:2rem;
			line-height:1em;
		}
		a[href=""]{
			opacity:0;
			pointer-events:none;
		}
	}
}

._p-overlay{
	position:fixed;
	top:0;
	left:0;
	width:100%;
	height:100%;
	overflow:auto;
	background-color:rgba(0,0,0,.9);
	display:none;
	&--active{
		display:block;
	}
	&__close{
		text-align:center;
		padding:1rem;
	}
	&__closebtn{
		font-size:5rem;
		color:#FFF;
	}
}



._p-comments{
	&__title{
		{myserif}
		font-size:1.6rem;
		font-weight:normal;
	}
	.comment-reply-title{
		font-size:1rem;
	}

}


@keyframes anime1 {
	0% {opacity:0;
		text-shadow:0 0 2px #ccc;
	}
	100% {opacity:1;
		text-shadow:0 0 2px #000;
	}
}


/* archive */

._p-archive__title{
	{mymincho}
	font-weight:normal;
	font-size:1rem;
	text-align:center;
	margin:1em;
	@media (max-width: sm) {
		font-size:0.8rem;
	}
}

._p-entries{
	margin:auto;
	padding:10px;
	&__item{
		padding:10px;
		margin:0;
	}
}

._p-entry{
	&-summary{
		position:relative;
		overflow:hidden;
		&__body{
			position:absolute;
			top:0;
			left:0;
			padding:5px;
			display:flex;
			width:100%;
			height:100%;
			justify-content: center;
			align-items: center;
		}
		&__title{
			{mymincho}
			font-size:.8rem;
			color:#FFF;
			text-shadow:0 0 2px #000;
			line-height:1em;
			letter-spacing:-1px;
		}
		a{
			&:hover{
				img{
					opacity:.5;
				}
			}
		}
	}
}
._p-rest__container{
	._p-entries{
		opacity:0;
	}
}

._p-copyright{
	font-size:10px;
	font-size:.5rem;
}

._p-tags{
	&__list{
		list-style-type:none;
		overflow:hidden;
		position:relative;
	}
	&__item{
		margin:1px;
		padding:0;
		float:left;
		a{
			display:block;
			border-radius:3px;
			font-size:0.8rem;
			padding:0.5em 0.8em;
			color:#ccc;
			border:1px solid #ccc;
			transition:.5s;
			&:hover{
				background-color:#999;
				color:#000;
			}
		}
		&--active{
			a{
				background-color:#fff;
				color:#000;
			}
		}
	}
}


/* spinner */

._p-spinner__container{
	z-index:20;
	width:100%
	height:100%;
	position:absolute;
	background-color:rgba(0,0,0,.8);
	display:none;
}
._p-spinner__container.active{
	display:block;
}

.spinner {
	position:absolute;
	left:0;
	right:0
	top:0;
//	bottom:0;
	margin:auto;

  width: 40px;
  height: 40px;
  text-align: center;
  
  -webkit-animation: sk-rotate 2.0s infinite linear;
  animation: sk-rotate 2.0s infinite linear;
}
.spinner.active {
display:block;
}

.dot1, .dot2 {
  width: 60%;
  height: 60%;
  display: inline-block;
  position: absolute;
  top: 0;
  background-color: #fff;
  border-radius: 100%;
  
  -webkit-animation: sk-bounce 2.0s infinite ease-in-out;
  animation: sk-bounce 2.0s infinite ease-in-out;
}

.dot2 {
  top: auto;
  bottom: 0;
  -webkit-animation-delay: -1.0s;
  animation-delay: -1.0s;
}

@-webkit-keyframes sk-rotate { 100% { -webkit-transform: rotate(360deg) }}
@keyframes sk-rotate { 100% { transform: rotate(360deg); -webkit-transform: rotate(360deg) }}

@-webkit-keyframes sk-bounce {
  0%, 100% { -webkit-transform: scale(0.0) }
  50% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bounce {
  0%, 100% { 
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 50% { 
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}